doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    link(rel="stylesheet", href="/resources/styles.css")
    link(rel="stylesheet", href="/resources/themes.css")
    link(rel="stylesheet", href="/resources/linePageStyle.css")
    script(type="text/javascript", src="/resources/jquery-3.2.1.min.js")
    script(type="text/javascript", src="/resources/vue.min.js")
    title= hostName
  body
    div#framework
        header.clearfix
            h1#logo
              a(href="/")
                span.symbolIconFontStyle(v-html="connectivity")
                span= hostName
        article#content
          section#lines.workspaceView
            header.clearfix
              h1.captionTextStyle Lines
            div.content
              form#sendingMessage(method="post", action="/line/create/")
                p#submit
                  input#body.symbolIconFontStyle(name="body" type="text" value="" v-model="body" required="required" autofocus="autofocus")
                  button.symbolIconFontStyle(type="submit")!= "&#xE724;"
              div.listview.messagesView
                div.messagesViewItem( v-for="line in lines")
                  p.createdAt {{line.createdAt}}
                  p.body {{line.body}}
    script(type="text/javascript" src="/resources/linePageViewModel.js")